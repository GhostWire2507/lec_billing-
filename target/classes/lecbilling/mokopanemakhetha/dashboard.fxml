<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="fxRoot" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecbilling.mokopanemakhetha.DashboardController">
    <top>
        <VBox style="-fx-background-color: #1e3c72;">
            <HBox alignment="CENTER" style="-fx-padding: 10;">
                <!-- Space for LEC Icon -->
                <ImageView fitWidth="40" fitHeight="40" preserveRatio="true">
                    <Image url="@lecIcon.jpg" />
                </ImageView>
                <Label text="  LEC Billing System" styleClass="dashboard-title" />
            </HBox>
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 10 20 20 20;">
                <Label text="Dashboard" styleClass="dashboard-subtitle" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="fxLogoutButton" text="Logout" styleClass="logout-button" onAction="#handleLogout" />
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="40.0" style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>

            <Label text="Welcome to LEC Billing System" styleClass="welcome-title" />

            <GridPane hgap="30" vgap="30" alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

                <Button fx:id="fxManageCustomersButton" text="Manage Customers" styleClass="dashboard-button" onAction="#handleManageCustomers" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Button fx:id="fxCalculateBillsButton" text="Calculate Bills" styleClass="dashboard-button" onAction="#handleCalculateBills" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Button fx:id="fxViewReportsButton" text="View Reports" styleClass="dashboard-button" onAction="#handleViewReports" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            </GridPane>
        </VBox>
    </center>
</BorderPane>