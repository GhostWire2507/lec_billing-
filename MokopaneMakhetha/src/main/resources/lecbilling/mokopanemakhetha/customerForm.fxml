<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="fxRoot" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecbilling.mokopanemakhetha.CustomerFormController">
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298); -fx-padding: 40;">
            <Label text="Customer Information" styleClass="form-title" />

            <VBox spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 30;">
                <VBox spacing="10.0">
                    <Label text="Customer ID" styleClass="form-label" />
                    <TextField fx:id="fxCustomerIdField" styleClass="form-field" promptText="Enter customer ID" />
                </VBox>

                <VBox spacing="10.0">
                    <Label text="Full Name" styleClass="form-label" />
                    <TextField fx:id="fxNameField" styleClass="form-field" promptText="Enter full name" />
                </VBox>

                <VBox spacing="10.0">
                    <Label text="Address" styleClass="form-label" />
                    <TextField fx:id="fxAddressField" styleClass="form-field" promptText="Enter address" />
                </VBox>

                <VBox spacing="10.0">
                    <Label text="Meter Number" styleClass="form-label" />
                    <TextField fx:id="fxMeterNumberField" styleClass="form-field" promptText="Enter meter number" />
                </VBox>

                <HBox spacing="15.0" alignment="CENTER">
                    <Button fx:id="fxSaveButton" text="Save" styleClass="save-button" onAction="#handleSave" />
                    <Button fx:id="fxCancelButton" text="Cancel" styleClass="cancel-button" onAction="#handleCancel" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>