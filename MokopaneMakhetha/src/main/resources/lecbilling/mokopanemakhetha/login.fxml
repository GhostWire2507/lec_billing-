<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="fxRoot" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom right, #1e3c72, #2a5298);">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <VBox alignment="CENTER" spacing="30.0">
                <Label text="LEC Billing System" styleClass="login-title">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 30;">
                    <Label text="Login to Your Account" styleClass="login-subtitle" />

                    <VBox spacing="10.0">
                        <Label text="Username" styleClass="form-label" />
                        <TextField fx:id="fxUsernameField" styleClass="login-field" promptText="Enter your username" />
                    </VBox>

                    <VBox spacing="10.0">
                        <Label text="Password" styleClass="form-label" />
                        <PasswordField fx:id="fxPasswordField" styleClass="login-field" promptText="Enter your password" />
                    </VBox>

                    <Button fx:id="fxLoginButton" styleClass="login-button" text="Sign In" onAction="#handleLogin" />
                </VBox>

                <Label text="Lesotho Electricity Company" styleClass="company-label" />
            </VBox>
        </VBox>
    </center>
</BorderPane>