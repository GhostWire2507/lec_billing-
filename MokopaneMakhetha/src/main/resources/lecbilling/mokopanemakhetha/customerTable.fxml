<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane fx:id="fxRoot" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lecbilling.mokopanemakhetha.CustomerTableController">
    <top>
        <VBox style="-fx-background-color: #1e3c72;">
            <HBox alignment="CENTER_LEFT" style="-fx-padding: 20;">
                <Label text="Customer Management" styleClass="dashboard-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="fxBackButton" text="Back to Dashboard" styleClass="back-button" onAction="#handleBack" />
            </HBox>

            <HBox spacing="15.0" style="-fx-padding: 20; -fx-background-color: #2a5298;">
                <TextField fx:id="fxSearchField" promptText="Search by ID or Name..." styleClass="search-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="fxAddButton" text="Add Customer" styleClass="action-button" onAction="#handleAddCustomer" />
                <Button fx:id="fxEditButton" text="Edit Customer" styleClass="action-button" onAction="#handleEditCustomer" />
                <Button fx:id="fxDeleteButton" text="Delete Customer" styleClass="delete-button" onAction="#handleDeleteCustomer" />
                <Button fx:id="fxCalculateBillButton" text="Calculate Bill" styleClass="calculate-button" onAction="#handleCalculateBill" />
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="fxCustomerTable" styleClass="customer-table">
            <columns>
                <TableColumn fx:id="fxCustomerIdColumn" text="Customer ID" styleClass="table-column" />
                <TableColumn fx:id="fxNameColumn" text="Name" styleClass="table-column" />
                <TableColumn fx:id="fxAddressColumn" text="Address" styleClass="table-column" />
                <TableColumn fx:id="fxMeterNumberColumn" text="Meter Number" styleClass="table-column" />
                <TableColumn fx:id="fxUsageColumn" text="Usage (kWh)" styleClass="table-column" />
                <TableColumn fx:id="fxBillColumn" text="Bill Amount (M)" styleClass="table-column" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
</BorderPane>